{
  "patrol": {
    "interval_minutes": 120,
    "daily_report_time": "08:00",
    "alert_cooldown_hours": 24
  },
  "thresholds": {
    "ssh_failed_logins": 10,
    "disk_usage_percent": 85,
    "cpu_usage_percent": 80,
    "memory_usage_percent": 85
  },
  "monitors": [
    "ssh",
    "updates",
    "firewall",
    "network",
    "disk",
    "cpu",
    "memory",
    "processes"
  ],
  "processes": [
    { "name": "clawdbot-gateway", "type": "systemd", "restartAlertThreshold": 10, "memoryAlertMB": 200 },
    { "name": "kanban-dashboard", "type": "pm2" },
    { "name": "node", "type": "ps" }
  ],
  "telegram": {
    "chat_id": "REDACTED_CHAT_ID",
    "enable_instant_alerts": true,
    "enable_daily_report": true
  }
}
